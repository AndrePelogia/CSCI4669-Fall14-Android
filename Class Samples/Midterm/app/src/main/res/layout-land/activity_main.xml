<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <fragment
        android:id="@+id/number_pad_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="edu.uno.csci.midterm.NumberPadFragment"
        tools:layout="@layout/fragment_number_pad"/>

    <fragment
        android:id="@+id/window_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="edu.uno.csci.midterm.WindowFragment"
        tools:layout="@layout/fragment_window"/>

</LinearLayout>